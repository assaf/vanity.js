<ol id="stream" class="stream">
</ol>
<script>
$(function() { 
  var $ol = $("#stream"),
      id = document.location.pathname.split("/")[2];
  $.getJSON("/v1/activity/" + id, function(activity) {
    $ol.append( $("<li>").append($(activity.html)) );
  }).error(function(xhr, status, error) { 
    $ol.append( $("<h1 class='error'>").text(error) );
  });
})
</script>
